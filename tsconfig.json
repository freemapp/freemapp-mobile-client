{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@fma_app/*": [ "src/app/*" ],
      "@fma_assets/*": [ "src/assets/*" ],
      "@fma_env": [ "environments/environment" ],
      "@fma_pages/*": [ "src/pages/*" ],
      "@fma_providers/*": [ "src/providers/*" ],
      "@fma_components/*": [ "src/components/*" ],
      "@fma_theme/*": [ "src/theme/*" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
